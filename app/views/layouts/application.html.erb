<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="glyphicon glyphicon-book">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">

            <% if user_signed_in?%>

            <li class="glyphicon glyphicon-home">
              <%= link_to "Home", user_path %>
            </li>
            <li class="glyphicon glyphicon-user">
              <%= link_to "Users", users_path %>
            </li>
            <li class="glyphicon glyphicon-book">
              <%= link_to "Books", books_path %>
            </li>
            <li class="glyphicon glyphicon-log-out">
             <%= link_to "logout", destroy_user_session_path, method: :delete %>
            </li>

            <% else %>

            <li class="glyphicon glyphicon-home">
            <%= link_to "Home", root_path %>
            </li>
            <li class="glyphicon glyphicon-link">
            <%= link_to "About", about_path %>
            </li>
            <li class="glyphicon glyphicon-edit">
              <%= link_to "sign up", new_user_registration_path %>
            </li>
            <li class="glyphicon glyphicon-log-in">
              <%= link_to "login", user_session_path %>
            </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

   <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p> CopyRight @nionmiya</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
