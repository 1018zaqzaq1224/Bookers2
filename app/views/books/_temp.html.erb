<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-xs-3">
				<h2> User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div class="actions">
						<%= f.submit "", class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
					</div>
				</div>
				<h2> New book</h2>
				<%= form_for(@book) do |f| %>
					<h4> Title</h4>
					<%= f.text_field :title %>
					<h4> Opinion</h4>
					<%= f.text_area :body %>

					<br>
					<%= f.submit 'Create Book' %>
				<% end %>
			</div>
		</div>
	</div>
</div>

