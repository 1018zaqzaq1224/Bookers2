<div class="body">
	<div class="container">
		<p id="notice"><%= "notice" %></p>
		<div class="row">
			<div class="col-xs-3">
				<h2> User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<div class="actions">
						<%= form_for(@user) do |f| %>
							<%= link_to "btn btn-default active glyphicon glyphicon-wrench col-xs-12", edit_user_path %>
						<% end %>
					</div>
				</div>
				<h2> New book</h2>
				<%= form_for(@book) do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
						<%= f.text_field :title, class: "col-xs-12" %>
					</div>
					<div class="field row">
						<label for="book_opinon">Opinion</label>
						<%= f.text_area :body, class: "col-xs-12" %>
					</div>
				<% end %>
				<div class="actions row">
					<%= form_for(@user) do |f| %>
					<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
					<% end %>
				</div>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @user.books.each do |book| %>
						<tr>
							<td><%= @user.name %></td>
							<td><%= book.title %></td>
							<td><%= book.book_opinon %></td>
						</tr>
						<% end%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>